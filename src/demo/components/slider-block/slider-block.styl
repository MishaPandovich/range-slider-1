.slider-block
  display flex
  justify-content space-between
  padding 1rem
  border 0.08rem dashed gray

  @media only screen and (max-width: 720px)
    flex-direction column

  &__slider-wrapper
    width 50%

    @media only screen and (max-width: 720px)
      width 100%

  &__options
    display table
    border-spacing 0.5rem 0.1rem

  &__option
    display table-row

  &__option-name, &__min, &__max, &__range, &__from, &__to, &__step, &__vertical,
  &__display-hint, &__display-tracker, &__display-grid, &__grid-step, &__disabled
    display table-cell

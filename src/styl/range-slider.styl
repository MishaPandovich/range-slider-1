$diamond = #4eb7a8
$red = #e75735
$gray = #e5e5e5

.range-slider
  height 0.375rem
  background-color $gray
  border-radius 0.333333333rem
  position relative

  &__handle
    width 1.5rem
    height 1.5rem
    background-color $diamond
    border-radius 50%
    position absolute
    bottom -0.5625rem
    cursor pointer
    margin-left -0.75rem
    z-index 1

    &_hidden
      visibility hidden

  &__hint
    font-family Tahoma
    font-size 0.7rem
    font-weight bold
    background-color $diamond
    border-radius 0.333333333rem
    color #fff
    text-align center
    position absolute
    padding 0.2rem 0.5rem
    cursor pointer
    white-space nowrap
    height 1.3rem
    box-sizing border-box
    bottom calc(100% + 0.25rem)

    &_hidden
      visibility hidden

  &__tracker
    width 100%
    height 100%
    background-color $diamond
    position absolute
    border-radius 0.333333333rem

    &_hidden
      visibility hidden

  &__grid
    display flex
    position absolute
    width 100%
    top 100%
    margin-top 0.4rem
    cursor default

    &_hidden
      visibility hidden

  &__grid-mark
    position absolute
    transform translateX(-50%)
    color $gray
    font-weight bold

  &__grid-mark:first-child
    transform none

  &__grid-mark:last-child
    transform translateX(-100%)

  &_vertical
    width 0.375rem
    height 25rem
    margin 0.75rem 2.25rem 0.75rem 2.25rem

    & ^[0]__handle
      left -0.5625rem
      margin-left 0
      margin-bottom -0.75rem

    & ^[0]__hint
      left calc(100% + 0.25rem)

    & ^[0]__track-bar
      width 100%

    & ^[0]__grid
      flex-direction column
      width 1.5rem
      height 100%
      top unset
      margin-top unset
      right 100%
      margin-right 0.8rem

    & ^[0]__grid-mark
      transform translateY(50%)
      right 0

    & ^[0]__grid-mark:first-child
      transform none

    & ^[0]__grid-mark:last-child
      transform translateY(100%)
